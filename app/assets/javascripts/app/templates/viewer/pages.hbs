<div class="viewer">
  <a href="javascript:void(0)" class="viewer__navitem--left" {{action 'previous'}}>
    <i class="i-chevron-left-dark"></i>
  </a>
  <a href="javascript:void(0)" class="viewer__navitem--right" {{action 'next'}}>
    <i class="i-chevron-right-dark"></i>
  </a>
  {{#each arrangedContent}}
    <div class="viewer__pane">
      {{render "viewerPage" this}}
    </div>
  {{/each}}
</div>
