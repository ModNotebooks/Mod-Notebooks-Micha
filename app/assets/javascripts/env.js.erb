window.ENV = {
  FEATURES: {
    'query-params-new': true
  }
};

window.ENV.IE = /msie/.test(navigator.userAgent.toLowerCase());

<% if Rails.env.production? %>
window.ENV.AUTH_ENDPOINT = "//auth.modnotebooks.com" + (window.ENV.IE ? ":80" : "");
window.ENV.API_ENDPOINT = "//api.modnotebooks.com" + (window.ENV.IE ? ":80" : "");
window.ENV.STORE_ENDPOINT = "http://modnotebooks.com";
<% elsif Rails.env.staging? %>
window.ENV.AUTH_ENDPOINT = "//auth.draftnotebooks.com" + (window.ENV.IE ? ":80" : "");
window.ENV.API_ENDPOINT = "//api.draftnotebooks.com" + (window.ENV.IE ? ":80" : "");
window.ENV.STORE_ENDPOINT = "http://mod-dev.myshopify.com";
<% else %>
window.ENV.AUTH_ENDPOINT = "//auth.lvh.me:3000";
window.ENV.API_ENDPOINT = "//api.lvh.me:3000";
window.ENV.STORE_ENDPOINT = "http://mod-dev.myshopify.com";
<% end %>

<% if !Rails.env.production? %>
window.ENV.APPLICATION_OPTIONS = {
  LOG_ACTIVE_GENERATION: true,
  LOG_MODULE_RESOLVER: true,
  LOG_TRANSITIONS: true,
  LOG_TRANSITIONS_INTERNAL: true,
  LOG_VIEW_LOOKUPS: true
};
<% end %>
