<form class="l-guest-form form">
  <div {{bind-attr class=":form__control errors.email:is-error"}}>
    {{input type="text" value=email placeholder="Email Address"}}
    {{#if errors.email }}
      <span class="form__error">{{errors.email}}</span>
    {{/if}}
  </div>
  <div {{bind-attr class=":form__control errors.password:is-error"}}>
    {{input type="password" value=password placeholder="Password"}}
    {{#if errors.password }}
      <span class="form__error">{{errors.password}}</span>
    {{/if}}
  </div>
  <div {{bind-attr class=":form__control errors.passwordConfirmation:is-error"}}>
    {{input type="password" value=passwordConfirmation placeholder="Confirm Password"}}
    {{#if errors.passwordConfirmation }}
      <span class="form__error">{{errors.passwordConfirmation}}</span>
    {{/if}}
  </div>
  <div class="form__actions">
    {{spin-button isLoading=isLoading buttonText=buttonText action="submit" buttonClass="button--medium"}}
  </div>
</form>
