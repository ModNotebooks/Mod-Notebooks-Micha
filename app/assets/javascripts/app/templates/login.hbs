<form class="l-guest-form form">
  {{#if loginErrorMessage }}
    <span class="form__error">{{loginErrorMessage}}</span>
  {{/if}}
  <div class="form__control flush">
    {{view Ember.TextField valueBinding='identification' placeholder='Email'}}
  </div>
  <div class="form__control flush">
    {{view Ember.TextField type='password' valueBinding='password' placeholder='Password'}}
    {{#link-to 'password_reset' class="form__input__altaction"}}?{{/link-to}}
  </div>
  <div class="form__actions">
    {{spin-button isLoading=isLoading buttonText=buttonText action="authenticate" buttonClass="button--medium" }}
  </div>
</form>
