<form class="form">
  <div class="form__control">
    {{input type="text" value=address.name placeholder="Full Name"}}
  </div>
  <div class="form__control">
    {{input type="text" value=address.line_1 placeholder="Address"}}
  </div>
  <div class="form__control--twothird">
    {{input type="text" value=address.region placeholder="State"}}
  </div>
  <div class="form__control--onethird">
    {{input type="text" value=address.postalCode placeholder="Postal Code"}}
  </div>
  <div class="clearfix"></div>
  <div class="form__control">
    {{input type="text" value=address.country placeholder="Country"}}
  </div>
  <div class="form__actions">
    {{spin-button isLoading=isLoading buttonText="Save" action="save" buttonClass="button--medium"}}
  </div>
</form>
