<h1 class="digitize-header">
  Digitize my notebook <br>
  <small>Login or Sign up to get started</small>
  <div class="l-digitize-auth">
    <div class="l-digitize-authcol">
      <form class="form">
        {{#if loginErrorMessage }}
          <span class="form__error">{{loginErrorMessage}}</span>
        {{/if}}
        <div class="form__control">
          {{input type="text" valueBinding="loginIdentification" class="form__control__input"}}
          <label class="form__control__label">Email Address</label>
        </div>
        <div class="form__control">
          {{input type="password" valueBinding="loginPassword" class="form__control__input"}}
          <label class="form__control__label">Password</label>
          <a href="/users/password/new" class="form__control__altaction">?</a>
        </div>
        <div class="form__actions">
          {{spin-button isLoading=loginIsLoading buttonText=loginButtonText action="login" buttonClass="button--form" }}
        </div>
      </form>
    </div>
    <div class="l-digitize-authcol">
      <form class="form">
        <div {{bind-attr class=":form__control errors.email:is-error"}}>
          {{input type="text" value=email class="form__control__input"}}
          <label class="form__control__label">Email Address</label>
          {{#if errors.email }}
            <span class="form__error">{{format-errors errors.email}}</span>
          {{/if}}
        </div>
        <div {{bind-attr class=":form__control errors.password:is-error"}}>
          {{input type="password" value=password class="form__control__input"}}
          <label class="form__control__label">Password</label>
          {{#if errors.password }}
            <span class="form__error">{{format-errors errors.password}}</span>
          {{/if}}
        </div>
        <div {{bind-attr class=":form__control errors.passwordConfirmation:is-error"}}>
          {{input type="password" value=passwordConfirmation class="form__control__input"}}
          <label class="form__control__label">Verify Password</label>
          {{#if errors.passwordConfirmation }}
            <span class="form__error">{{format-errors errors.passwordConfirmation}}</span>
          {{/if}}
        </div>
        <div class="form__actions">
          {{spin-button isLoading=signupIsLoading buttonText=signupButtonText action="signup" buttonClass="button--form"}}
        </div>
      </form>
    </div>
  </div>
</h1>
