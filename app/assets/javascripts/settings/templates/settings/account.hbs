<form class="form">
  <div {{bind-attr class=":form__control errors.email:is-error"}}>
    {{input type="text" value=email placeholder="Email Address"}}
    {{#if errors.email }}
      <span class="form__error">{{{format-errors errors.email}}}</span>
    {{/if}}
  </div>
  <fieldset>
    <legend>Change Password</legend>
    <div {{bind-attr class=":form__control errors.currentPassword:is-error"}}>
      {{input type="text" value=currentPassword placeholder="Current Password"}}
      {{#if errors.currentPassword }}
        <span class="form__error">{{{format-errors errors.currentPassword}}}</span>
      {{/if}}
    </div>
    <div {{bind-attr class=":form__control errors.password:is-error"}}>
      {{input type="text" value=password placeholder="New Password"}}
      {{#if errors.password }}
        <span class="form__error">{{{format-errors errors.password}}}</span>
      {{/if}}
    </div>
    <div {{bind-attr class=":form__control errors.passwordConfirmation:is-error"}}>
      {{input type="text" value=passwordConfirmation placeholder="New Password Confimation"}}
      {{#if errors.passwordConfirmation }}
        <span class="form__error">{{{format-errors errors.passwordConfirmation}}}</span>
      {{/if}}
    </div>
  </fieldset>
  <div class="form__actions">
    {{spin-button isLoading=isLoading isEnabled=isValid buttonText="Save" action="save" buttonClass="button--medium"}}
  </div>
</form>

