<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'l-guest-form form' }) do |f| %>
  <%= f.hidden_field :reset_password_token %>

  <% if resource.errors.count > 0 %>
    <span class="form__error"><%= resource.errors.full_messages.first %></span>
  <% end %>

  <div class="form__control">
    <%= f.password_field :password, autofocus: true, class: "form__control__input" %>
    <%= f.label :password, class: "form__control__label" %>
  </div>

  <div class="form__control">
    <%= f.password_field :password_confirmation, class: "form__control__input" %>
    <%= f.label :password_confirmation, class: "form__control__label" %>
  </div>

  <div class="form__actions">
    <%= f.submit "Change my password", class: "button--form" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
